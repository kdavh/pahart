<div class="row" id="contact-content">
  <div class="large-12 small-12 columns">
    <form {{action "contactEmail" on="submit"}}>
      <fieldset>
        <legend>Contact</legend>
        <div class="row">
          <div class="large-3 columns">
            {{input value=name type="text" placeholder="name" tabindex='1'}}
          </div>
        </div>

        <div class="row">
          <div class="large-3 columns" id="email">
            {{input value=email type="text" placeholder="email" tabindex='2'}}
          </div>
        </div>
        
        <div class="row" id="email-field">
          <div class="large-3 columns">
            {{input value=email1 type="text" placeholder="email" tabindex='-1'}}
          </div>
        </div>
        
        <div class="row" id="other-email">
          <div class="large-3 columns">
            {{input value=email2 type="text" placeholder="email" tabindex='2'}}
          </div>
        </div>
        <div class="row">
          <div class="large-4 columns">
            {{input value=subject type="text" placeholder="subject" tabindex='3'}}
          </div>
        </div>

        <div class="row">
          <div class="large-8 columns" id="contact-note">
            {{#textarea value=note type="text" placeholder="note" tabindex='4'}}{{/textarea}}
          </div>
        </div>

        <div class="row">
          <div class="large-2 columns">
            <input class="round button" id="animated-loading" type="submit" value="Send" tabindex='5'>
          </div>
          <div class="large-4 columns">
            <div id="email-sending-loader" class="hidden">
              <%= image_tag "zoomloader.gif" %> Please wait, your email is being sent.
            </div>            
          </div>
          <div class="large-6 columns"></div>
        </div>
      </fieldset>
    </form>
  </div>
</div>

{{#if contactSent}}
  <div class="alert-box success">
    Your message was sent.  You should receive a confirmation email shortly.
  </div>
{{/if}}
{{#if contactFailed}}
  <div class="alert-box alert">
    Please correct errors.  Make sure you have a valid email and a note.
  </div>
{{/if}}
